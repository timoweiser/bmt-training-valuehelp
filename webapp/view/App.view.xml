<mvc:View controllerName="valuehelp.controller.App" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<Label text="Carrier"></Label>
					<Input 
						id="productInputSingle"
						showSuggestion="" 
						showValueHelp="true" 
						valueHelpRequest="handleValueHelp"
						suggestionItems="{path: '/SCARRSet'}">
						<suggestionItems>
							<core:Item text="{Carrid}"></core:Item>
						</suggestionItems>
					</Input>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>